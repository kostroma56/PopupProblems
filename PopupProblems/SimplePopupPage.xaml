<?xml version="1.0" encoding="utf-8" ?>

<popups:PopupPage
    x:Class="PopupProblems.SimplePopupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popupProblems="clr-namespace:PopupProblems"
    xmlns:popups="clr-namespace:MPowerKit.Popups;assembly=MPowerKit.Popups"
    x:DataType="popupProblems:SimpleViewModel"
    BackgroundColor="#88000000">
    <Border
        BackgroundColor="White"
        HeightRequest="250"
        VerticalOptions="End">
        <Button
            Command="{Binding ClosePopupCommand}"
            Text="Close"
            VerticalOptions="Center" />
    </Border>
</popups:PopupPage>